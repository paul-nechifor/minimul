@font-face {
    font-family: 'Anton';
    font-style: normal;
    font-weight: normal;
    src: local('Anton'), url('/_fonturi/Anton.woff') format('woff');
}



* {margin:0;padding:0;outline:none}
a{text-decoration:none}
html{cursor:default;font-family:sans-serif,serif;font-size:13px;  word-spacing:2px;}
body{width:900px;margin:0 auto}
html,body{height:100%;}
#stanga,#dreapta{width:180px;float:left}
#centru{width:538px;float:left;background-color:#FFF;/*border:1px dashed #aaa;border-width:0 1px;*/height:auto;min-height:100%;position:relative}
#antet{padding-top:10px;}
#antet h1 a{color:#505050;text-transform:uppercase;font-weight:normal}
#antet h1 {text-align:center; font-family:"Anton";/*font-family:"Palatino Linotype", "Book Antiqua", "Palatino", serif*/; font-size:32px; letter-spacing:1px;word-spacing:4px;}
#continut{padding:20px 20px 60px 20px}
#continut h2{color:#505050;font-size:20px;margin:20px 0 10px 30px;font-family:sans-serif;font-weight:normal}
#continut h3{color:#505050;font-size:14px;text-transform:uppercase;/*margin:10px 0 10px 30px;*/margin-top:10px;margin-left:30px;font-family:sans-serif;font-weight:bold;}
#continut p{line-height:1.6;text-align:justify;text-indent:30px; color:#505050}
#continut a{color:#5F91BA;}
#continut a:hover {border-bottom:1px solid #AAA}
#continut ul{padding-left:50px;list-style-type:square;}
#continut li{line-height:1.6;text-align:justify;color:#505050}
#continut span.cod{font-family:monospace; background-color:#f2f2f2;}

blockquote{margin: 5px 30px 5px 32px;border-left:3px solid #BBB; padding:0 10px;}
blockquote.blocgresit{border-left:3px solid #B66; padding:0 10px;}
blockquote.bloccorect{border-left:3px solid #6B6; padding:0 10px;}
p.ladreapta{text-align:right !important}
.gresit{color:#811 !important;}
.corect{color:#136923 !important;}
#notedesubsol {font-size:11px;margin-top:30px;}
#baranote {width:100px; height:10px; border-top:1px solid #000;}

div.blocgresit{background:#FDD;}
div.bloccorect{background:#DFF;}
div.indic{width:35px;float:left;font-size:8px;text-transform:uppercase;margin:4px 0 0 2px;}
div.indic p{text-indent:0 !important;}
div.textul{width:353px;float:left;padding:0 2px 0 6px}
div.textul p{text-indent:0 !important;}
#subsol{padding-bottom:10px;position:absolute;bottom:0;width:100%}
#subsol a{color:#5F91BA;}
#subsol p{text-align:center;font-size:10px;color:#888}

.cf{clear:both;}
.fa{text-indent:0 !important;}

table#dictionar{margin:20px 0 30px 0;border-collapse:collapse;width:498px}
table#dictionar tr{border:1px solid #bbb;border-width:1px 0;}
table#dictionar td{padding:4px 0;}

td.ex{text-align:right}

a.info{position:relative;z-index:24;}
a.info:hover {z-index:25;}
a.info span{display:none}
a.info:hover span{display:block;position:absolute;top:30px;right:9px;width:458px;background:#EEE;padding:8px 10px;color:#000;border:1px solid #bbb; text-align:justify;}



.intro{margin-bottom:20px;padding:10px 0;border:1px solid #aaa; border-width:1px 0; font-style:italic}

#antet a.girltalk{display:block;text-indent:-9999px;width:399px;height:162px;margin:0 auto;background:url(girltalk/title.png)}

form.formular fieldset {margin: 10px 0 10px 0; border:1px solid #BBB; padding-bottom:15px;}
form.formular fieldset legend {margin-left:10px; padding:5px; font-style:italic;color:#505050;}
form.formular fieldset ul {padding:10px !important; list-style:none !important;}
form.formular fieldset ul li {padding-bottom:10px;}
form.formular fieldset ul li label {display:block; width:140px; float:left; margin-right:10px; text-align:right}
form.formular fieldset ul li img {140px; float:left; padding:5px; background-color:#e2e2e2;}
form.formular fieldset ul li input {width:310px; height:18px; padding:1px; margin:0; border:1px solid #bbb; background-color:#f2f2f2; font-size:12px;}
form.formular fieldset ul li textarea {width:310px; height:50px; padding:1px; margin:0; border:1px solid #bbb; background-color:#f2f2f2; font-size:12px; font-family:sans-serif}
form.formular fieldset ul li span {padding:0 10px; color:#D33; font-weight:bold;}


.cugetare{padding:10px 0 10px 0;}
.sep{padding-top:10px; text-align:center !important; text-indent:0 !important;}
.extracuge{font-size:10px; color:#FFF !important}
.extracuge a{color:#FFF !important}
div.cugetare:hover .extracuge{color:#AAA !important}
div.cugetare:hover .extracuge a{color:#5F91BA !important}
